{
  "compilerOptions": {
    "skipLibCheck": true,
    "esModuleInterop": true,
    "target": "es2018",
    "lib": ["es2020"],
    "module": "commonjs",
    "strict": true,
    "outDir": "./build",
    "rootDir": "./",
    "baseUrl": "./",
    "noErrorTruncation": true,
    "paths": {
      "@/*": ["src/*"],
      "@test/*": ["tests/*"]
    }
  }
}